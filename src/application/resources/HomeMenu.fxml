            <ImageView fitHeight="195.0" fitWidth="320.0" pickOnBounds="true" preserveRatio="true" styleClass="header">
               <image>
                  <Image url="@images/darklogo.png" />
               </image>
            </ImageView>
            <Label text="Quinzical">
               <styleClass>
                  <String fx:value="outline" />
                  <String fx:value="header" />
               </styleClass></Label>
         </children>
