            <Insets left="20.0" right="20.0" top="50.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0" VBox.vgrow="ALWAYS">
         <children>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#handlePracticeButton" prefHeight="100.0" prefWidth="360.0" styleClass="practice-button" text="Practice" textAlignment="CENTER">
