        <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="header">
                    <image>
                        <Image url="@images/darklogo.png" />
                    </image>
                </ImageView>
                <Label text="Game Module">
                    <font>
                        <Font size="90.0" />
                    </font>
                    <styleClass>
                        <String fx:value="outline" />
                        <String fx:value="shadow" />
                    </styleClass>
                </Label>
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
        <Label text="Select a Question:" textAlignment="CENTER">
            <font>
                <Font size="39.0" />
            </font>
        </Label>
        <GridPane fx:id="_questionGrid" alignment="CENTER" prefHeight="557.0" prefWidth="1280.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
