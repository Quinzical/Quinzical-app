            <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleResetButton" prefHeight="50.0" prefWidth="225.0" styleClass="setting-button" text="Reset Game" textAlignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="50.0" prefWidth="225.0" styleClass="exit-button" text="Menu" textAlignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
              <Button fx:id="_internationalButton" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#handleInternationalButton" prefHeight="40.0" prefWidth="220.0" styleClass="exit-button" text="International" textAlignment="CENTER">
                  <font>
                      <Font size="24.0" />
                  </font>
              </Button>
            <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#handleLeaderboardButton" prefHeight="40.0" prefWidth="220.0" styleClass="exit-button" text="Leaderboard" textAlignment="CENTER">
