            <AnchorPane prefWidth="10000.0">
               <children>
                      <Button alignment="CENTER" maxHeight="66.0" maxWidth="66.0" minHeight="66.0" minWidth="66.0" mnemonicParsing="false" onAction="#handleSettingsButton" prefHeight="66.0" prefWidth="66.0" styleClass="setting-button" textAlignment="CENTER" AnchorPane.rightAnchor="0.0">
                          <font>
                              <Font size="24.0" />
                          </font>
                          <graphic>
                              <ImageView fitHeight="70.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                  <image>
                                      <Image url="@images/settings.png" />
                                  </image>
                                  <viewport>
                                      <Rectangle2D />
                                  </viewport>
                                  <effect>
